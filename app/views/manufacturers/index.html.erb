
<h1>Fabricantes</h1>

<table id="table-manufacturers" class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Código</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @manufacturers.each do |manufacturer| %>
      <tr>
        <td><%= manufacturer.name %></td>
        <td><%= manufacturer.cod %></td>
        <td><%= link_to 'Ver', manufacturer %></td>
        <td><%= link_to 'Editar', edit_manufacturer_path(manufacturer) %></td>
        <td><%= link_to 'Excluir', manufacturer, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo fabricante', new_manufacturer_path %>

<script>
$(document).ready(function () {
  $('#table-manufacturers').DataTable({
    language: {
      url: 'https://cdn.datatables.net/plug-ins/1.13.1/i18n/pt-BR.json'
    }
  });
});
</script>

