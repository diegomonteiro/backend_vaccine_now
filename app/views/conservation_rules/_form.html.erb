
<%= simple_form_for(@conservation_rule) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :vaccine_type %>
    <%= f.input :min_temp %>
    <%= f.input :max_temp %>
    <%= f.input :max_variation %>
    <%= f.input :range_hours %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
