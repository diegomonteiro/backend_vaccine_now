
<%= simple_form_for(@disease) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :cod %>
    <%= f.input :complete_name %>
    <%= f.input :description %>
    <%= f.input :symptoms %>
    <%= f.input :restrictions %>
    <%= f.input :pathogen %>
    <%= f.input :pathogen_description %>
    <%= f.input :is_contagious %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
