<p id="notice"><%= notice %></p>

<h1>Diseases</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cod</th>
      <th>Complete name</th>
      <th>Description</th>
      <th>Symptoms</th>
      <th>Restrictions</th>
      <th>Pathogen</th>
      <th>Pathogen description</th>
      <th>Is contagious</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diseases.each do |disease| %>
      <tr>
        <td><%= disease.name %></td>
        <td><%= disease.cod %></td>
        <td><%= disease.complete_name %></td>
        <td><%= disease.description %></td>
        <td><%= disease.symptoms %></td>
        <td><%= disease.restrictions %></td>
        <td><%= disease.pathogen %></td>
        <td><%= disease.pathogen_description %></td>
        <td><%= disease.is_contagious %></td>
        <td><%= link_to 'Show', disease %></td>
        <td><%= link_to 'Edit', edit_disease_path(disease) %></td>
        <td><%= link_to 'Destroy', disease, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

