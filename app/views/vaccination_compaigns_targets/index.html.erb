

<h1>Público alvo das campanhas de Vacinação</h1>

<table id="table-vaccination-campaigns-targets" class="table table-stripped table-bordered">
  <thead>
    <tr>
      <th>Campanha</th>
      <th>Data de Inicio</th>
      <th>Data do Término</th>
      <th>Idade Mínima</th>
      <th>Idade Máxima</th>
      <th>Com comorbidades?</th>
      <th>Restrições</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @vaccination_compaigns_targets.each do |vaccination_compaigns_target| %>
      <tr>
        <td><%= vaccination_compaigns_target.vaccination_campaign_id %></td>
        <td><%= vaccination_compaigns_target.date_start %></td>
        <td><%= vaccination_compaigns_target.date_end %></td>
        <td><%= vaccination_compaigns_target.min_years_old %></td>
        <td><%= vaccination_compaigns_target.max_years_old %></td>
        <td><%= vaccination_compaigns_target.with_comorbidity %></td>
        <td><%= vaccination_compaigns_target.restrictions %></td>
        <td><%= link_to 'Ver', vaccination_compaigns_target %></td>
        <td><%= link_to 'Editar', edit_vaccination_compaigns_target_path(vaccination_compaigns_target) %></td>
        <td><%= link_to 'Excluir', vaccination_compaigns_target, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo público alvo', new_vaccination_compaigns_target_path %>

<script>
$(document).ready(function () {
  $('#table-vaccination-campaigns-targets').DataTable({
    language: {
      url: 'https://cdn.datatables.net/plug-ins/1.13.1/i18n/pt-BR.json'
    }
  });
});
</script>

