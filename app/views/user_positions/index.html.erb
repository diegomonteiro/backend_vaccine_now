<div class="page-header">
<h1>Posições do Usuário</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Usuário</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Precisão</th>
      <th>Atualizado em?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_positions.each do |user_position| %>
      <tr>
        <td><%= user_position.user.name %></td>
        <td><%= user_position.latitude %></td>
        <td><%= user_position.longitude %></td>
        <td><%= user_position.accuracy %></td>
        <td><%= user_position.updated_at.localtime.strftime('%Y-%m-%d %H:%M') %></td>
        <td><%= link_to '<i class="fa fa-eye"></i> Ver'.html_safe, user_position %></td>
        <td><%= link_to '<i class="fa fa-trash"></i> Excluir'.html_safe, user_position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Position', new_user_position_path %>
