<%- model_class = VaccinationPointType -%>
<div class="page-header">
  <h4>Tipo de Ponto de Vacinação</h4>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nome:</strong></dt>
  <dd><%= @vaccination_point_type.name %></dd>
  <dt><strong>Cód.:</strong></dt>
  <dd><%= @vaccination_point_type.cod %></dd>
</dl>

<%= link_to '<i class="fa fa-arrow-left"></i> '.html_safe + t('.back', :default => t("helpers.links.back")),
              vaccination_point_types_path, :class => 'btn btn-outline-secondary'  %>
<%= link_to '<i class="fa fa-edit"></i> '.html_safe + t('.edit', :default => t("helpers.links.edit")),
              edit_vaccination_point_type_path(@vaccination_point_type), :class => 'btn btn-warning' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              vaccination_point_type_path(@vaccination_point_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
