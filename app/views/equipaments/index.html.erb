
<h1>Equipamentos</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Cod</th>
      <th>Fabricante</th>
      <th>Ponto de Vacinação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipaments.each do |equipament| %>
      <tr>
        <td><%= equipament.cod %></td>
        <td><%= equipament.manufacturer.name unless equipament.manufacturer.nil? %></td>
        <td><%= equipament.vaccination_point.name unless equipament.vaccination_point.nil? %></td>
        <td><%= link_to 'Ver', equipament %></td>
        <td><%= link_to 'Editar', edit_equipament_path(equipament) %></td>
        <td><%= link_to 'Excluir', equipament, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Equipamento', new_equipament_path %>
