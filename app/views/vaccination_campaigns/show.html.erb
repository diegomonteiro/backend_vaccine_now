<%- model_class = VaccinationPoint -%>
<div class="page-header">
  <h4><%=t '.title', :default => "Campanha de Vacinação" %></h4>
</div>

<dl class="dl-horizontal">
<dt><strong>Tipo de Ponto de Vacinação:</strong></dt>
<dd><%= @vaccination_campaign.name %></dd>

<dt><strong>Data de Início:</strong></dt>
<dd><%= @vaccination_campaign.date_start %></dd>

<dt><strong>Data de Término</strong></dt>
<dd><%= @vaccination_campaign.date_end %></dd>

<dt><strong>Descrição:</strong></dt>
<dd><%= @vaccination_campaign.description %></dd>

</dl>


<%= link_to '<i class="fa fa-arrow-left"></i> '.html_safe+t('.back', :default => t("helpers.links.back")),
              vaccination_campaigns_path, :class => 'btn btn-outline-secondary'  %>

<% if can? :read, VaccinationCampaign %>
<%= link_to '<i class="fa fa-edit"></i> '.html_safe+t('.edit', :default => t("helpers.links.edit")),
              edit_vaccination_campaign_path(@vaccination_campaign), :class => 'btn btn-warning' %>
<%= link_to '<i class="fa fa-trash"></i> '.html_safe+t('.destroy', :default => t("helpers.links.destroy")),
              vaccination_point_path(@vaccination_campaign),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>