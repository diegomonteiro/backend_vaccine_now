<%- model_class = Vaccination -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:vaccination_point_id) %></th>
      <th><%= model_class.human_attribute_name(:cod) %></th>
      <th><%= model_class.human_attribute_name(:vaccine_type) %></th>
      <th><%= model_class.human_attribute_name(:total_doses) %></th>
      <th><%= model_class.human_attribute_name(:remain_doses) %></th>
      <th><%= model_class.human_attribute_name(:discarded_doses) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vaccinations.each do |vaccination| %>
      <tr>
        <td><%= link_to vaccination.id, vaccination_path(vaccination) %></td>
        <td><%= vaccination.vaccination_point.name %></td>
        <td><%= vaccination.cod %></td>
        <td><%= vaccination.vaccine_type.name %></td>
        <td><%= vaccination.total_doses %></td>
        <td><%= vaccination.remain_doses %></td>
        <td><%= vaccination.discarded_doses %></td>
        <td><%= vaccination.updated_at.localtime.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_vaccination_path(vaccination), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      vaccination_path(vaccination),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_vaccination_path,
            :class => 'btn btn-primary' %>
