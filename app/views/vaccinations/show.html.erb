
<div class="page-header">
  <h1>Vacinação</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Ponto de Vacinação:</strong></dt>
  <dd><%= @vaccination.vaccination_point.name %></dd>
  <dt><strong>Cód.:</strong></dt>
  <dd><%= @vaccination.cod %></dd>
  <dt><strong>Tipo de Vacinação:</strong></dt>
  <dd><%= @vaccination.vaccine_type.name %></dd>
  <dt><strong>Total de Doses:</strong></dt>
  <dd><%= @vaccination.total_doses %></dd>
  <dt><strong>Doses Restantes:</strong></dt>
  <dd><%= @vaccination.remain_doses %></dd>
  <dt><strong>Doses Descartadas:</strong></dt>
  <dd><%= @vaccination.discarded_doses %></dd>
</dl>

<%= link_to '<i class="fa fa-arrow-left"></i> '.html_safe+t('.back', :default => t("helpers.links.back")),
              vaccinations_path, :class => 'btn btn-outline-secondary'  %>

<% if can? :write, VaccinationPoint %>
<%= link_to '<i class="fa fa-edit"></i> '.html_safe+t('.edit', :default => t("helpers.links.edit")),
              edit_vaccination_path(@vaccination), :class => 'btn btn-warning' %>

<%= link_to '<i class="fa fa-trash"></i> '.html_safe+t('.destroy', :default => t("helpers.links.destroy")),
              vaccination_path(@vaccination),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>
