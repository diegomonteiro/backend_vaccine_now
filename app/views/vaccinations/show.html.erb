<%- model_class = Vaccination -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:vaccination_point_id) %>:</strong></dt>
  <dd><%= @vaccination.vaccination_point_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cod) %>:</strong></dt>
  <dd><%= @vaccination.cod %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vaccine_type) %>:</strong></dt>
  <dd><%= @vaccination.vaccine_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_doses) %>:</strong></dt>
  <dd><%= @vaccination.total_doses %></dd>
  <dt><strong><%= model_class.human_attribute_name(:remain_doses) %>:</strong></dt>
  <dd><%= @vaccination.remain_doses %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              vaccinations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_vaccination_path(@vaccination), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              vaccination_path(@vaccination),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
