<%- model_class = VaccinationPoint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:vaccination_point_type_id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:latitude) %></th>
      <th><%= model_class.human_attribute_name(:longitude) %></th>
      <th><%= model_class.human_attribute_name(:contact_number) %></th>
      <th><%= model_class.human_attribute_name(:days_work) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vaccination_points.each do |vaccination_point| %>
      <tr>
        <td><%= link_to vaccination_point.id, vaccination_point_path(vaccination_point) %></td>
        <td><%= vaccination_point.vaccination_point_type_id %></td>
        <td><%= vaccination_point.name %></td>
        <td><%= vaccination_point.address %></td>
        <td><%= vaccination_point.latitude %></td>
        <td><%= vaccination_point.longitude %></td>
        <td><%= vaccination_point.contact_number %></td>
        <td><%= vaccination_point.days_work %></td>
        <td><%=l vaccination_point.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_vaccination_point_path(vaccination_point), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      vaccination_point_path(vaccination_point),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_vaccination_point_path,
            :class => 'btn btn-primary' %>
