<%- model_class = VaccinationPoint -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Pontos de Vacinação" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Tipo de Ponto de Vacinação:</strong></dt>
  <dd><%= @vaccination_point.vaccination_point_type_id %></dd>
  <dt><strong>Nome:</strong></dt>
  <dd><%= @vaccination_point.name %></dd>
  <dt><strong>Endereço:</strong></dt>
  <dd><%= @vaccination_point.address %></dd>
  <dt><strong>Latitude:</strong></dt>
  <dd><%= @vaccination_point.latitude %></dd>
  <dt><strong>Longitude:</strong></dt>
  <dd><%= @vaccination_point.longitude %></dd>
  <dt><strong>Contato:</strong></dt>
  <dd><%= @vaccination_point.contact_number %></dd>
</dl>


<%= link_to '<i class="fa fa-arrow-left"></i> '.html_safe+t('.back', :default => t("helpers.links.back")),
              vaccination_points_path, :class => 'btn btn-outline-secondary'  %>

<% if can? :read, VaccinationPoint %>
<%= link_to '<i class="fa fa-edit"></i> '.html_safe+t('.edit', :default => t("helpers.links.edit")),
              edit_vaccination_point_path(@vaccination_point), :class => 'btn btn-warning' %>
<%= link_to '<i class="fa fa-trash"></i> '.html_safe+t('.destroy', :default => t("helpers.links.destroy")),
              vaccination_point_path(@vaccination_point),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>
