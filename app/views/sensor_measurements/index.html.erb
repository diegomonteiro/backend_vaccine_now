<p id="notice"><%= notice %></p>

<h1>Sensor Measurements</h1>

<table>
  <thead>
    <tr>
      <th>Sensors</th>
      <th>Date hour</th>
      <th>Unit</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sensor_measurements.each do |sensor_measurement| %>
      <tr>
        <td><%= sensor_measurement.sensors_id %></td>
        <td><%= sensor_measurement.date_hour %></td>
        <td><%= sensor_measurement.unit %></td>
        <td><%= sensor_measurement.value %></td>
        <td><%= link_to 'Show', sensor_measurement %></td>
        <td><%= link_to 'Edit', edit_sensor_measurement_path(sensor_measurement) %></td>
        <td><%= link_to 'Destroy', sensor_measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

