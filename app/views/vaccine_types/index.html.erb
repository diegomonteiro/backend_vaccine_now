<%- model_class = VaccineType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:cod) %></th>
      <th><%= model_class.human_attribute_name(:manufacturer) %></th>
      <th><%= model_class.human_attribute_name(:efficiency) %></th>
      <th><%= model_class.human_attribute_name(:max_interval_in_days) %></th>
      <th><%= model_class.human_attribute_name(:disease) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vaccine_types.each do |vaccine_type| %>
      <tr>
        <td><%= link_to vaccine_type.id, vaccine_type_path(vaccine_type) %></td>
        <td><%= vaccine_type.name %></td>
        <td><%= vaccine_type.cod %></td>
        <td><%= vaccine_type.manufacturer %></td>
        <td><%= vaccine_type.efficiency %></td>
        <td><%= vaccine_type.max_interval_in_days %></td>
        <td><%= vaccine_type.disease %></td>
        <td><%=l vaccine_type.created_at.localtime %></td>
        <td>
          
          <% if can? :read, VaccineType %>
            <%= link_to 'Show', vaccine_type , :class => 'btn btn-default btn-xs'%>
          <% end %>

          <% if can? :update, VaccineType %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_vaccine_type_path(vaccine_type), :class => 'btn btn-default btn-xs' %>
          <% end %>

          <% if can? :destroy, VaccineType %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      vaccine_type_path(vaccine_type),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, VaccineType %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_vaccine_type_path,
            :class => 'btn btn-primary' %>
<% end %>
