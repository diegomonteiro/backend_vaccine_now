<%- model_class = VaccineType -%>
<div class="page-header">
  <!--<h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>-->
  <h1>Tipo de Vacina</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nome:</strong></dt>
  <dd><%= @vaccine_type.name %></dd>
  <dt><strong>Cód:</strong></dt>
  <dd><%= @vaccine_type.cod %></dd>
  <dt><strong>Fabricante:</strong></dt>
  <dd><%= @vaccine_type.manufacturer %></dd>
  <dt><strong>Eficência(%):</strong></dt>
  <dd><%= @vaccine_type.efficiency * 100 %></dd>

  <dt><strong>Máx.Dias:</strong></dt>
  <dd><%= @vaccine_type.max_interval_in_days %></dd>
  <dt><strong>Doença:</strong></dt>
  <dd><%= @vaccine_type.disease.name unless @vaccine_type.disease.nil? %></dd>
</dl>

<%= link_to '<i class="fa fa-arrow-left"></i> '.html_safe+t('.back', :default => t("helpers.links.back")),
              vaccine_types_path, :class => 'btn btn-outline-secondary'  %>
<%= link_to '<i class="fa fa-edit"></i> '.html_safe+t('.edit', :default => t("helpers.links.edit")),
              edit_vaccine_type_path(@vaccine_type), :class => 'btn btn-warning' %>
<%= link_to '<i class="fa fa-trash"></i> '.html_safe+t('.destroy', :default => t("helpers.links.destroy")),
              vaccine_type_path(@vaccine_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
