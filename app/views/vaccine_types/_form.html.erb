<%= simple_form_for @vaccine_type, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, label: 'Nome' %>
  <%= f.input :cod, label: 'Cód.' %>
  <%= f.input :manufacturer, label: 'Fabricante' %>
  <%= f.input :efficiency, label: 'Eficiência (%)' %>
  <%= f.input :max_interval_in_days, label: 'Máx. Intervalo em dias' %>
  <%= f.input :disease, label: 'Doença' %>

  <%= f.button :submit, "Confirmar", :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vaccine_types_path, :class => 'btn btn-outline-secondary' %>

<% end %>
