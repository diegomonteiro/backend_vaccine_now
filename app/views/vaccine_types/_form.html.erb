<%= simple_form_for @vaccine_type, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :cod %>
  <%= f.input :manufacturer %>
  <%= f.input :efficiency %>
  <%= f.input :number_of_doses %>
  <%= f.input :max_interval_in_days %>
  <%= f.input :disease %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vaccine_types_path, :class => 'btn btn-default' %>
<% end %>
