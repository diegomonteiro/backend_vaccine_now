<p id="notice"><%= notice %></p>

<h1>Medições de Temperatura</h1>

<table>
  <thead>
    <tr>
      <th>Equipamento</th>
      <th>Data/Hora</th>
      <th>Unidade</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurements.each do |measurement| %>
      <tr>
        <td><%= measurement.equipament.cod unless measurement.equipament.nil? %></td>
        <td><%= measurement.date_hour %></td>
        <td><%= measurement.unit %></td>
        <td><%= measurement.value %></td>
        <td><%= link_to 'Ver', measurement %></td>
        <td><%= link_to 'Editar', edit_measurement_path(measurement) %></td>
        <td><%= link_to 'Excluir', measurement, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Medição', new_measurement_path %>
